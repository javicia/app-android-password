<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Menu.Setting">

   <androidx.appcompat.widget.LinearLayoutCompat
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/Txt_Setting"
           android:textStyle="bold"
           android:padding="12dp"
           android:textSize="18sp"
           android:layout_marginTop="18dp"
           android:layout_marginStart="18dp"
           app:drawableStartCompat="@drawable/icon_settings"
           android:drawablePadding="8dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?android:attr/selectableItemBackground"
           />
       <TextView
           android:id="@+id/Change_Password"
           android:text="@string/Change_Password"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:padding="12dp"
           android:textSize="15sp"
           android:layout_marginTop="8dp"
           android:layout_marginStart="18dp"
           app:drawableStartCompat="@drawable/icon_change_password"
           android:drawablePadding="8dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?android:attr/selectableItemBackground"
           />

       <TextView
           android:id="@+id/Export_File"
           android:text="@string/Export_File"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:padding="12dp"
           android:textSize="15sp"
           android:layout_marginTop="8dp"
           android:layout_marginStart="18dp"
           app:drawableStartCompat="@drawable/icon_import_export"
           android:drawablePadding="8dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?android:attr/selectableItemBackground"
           />
       <TextView
           android:id="@+id/Import_File"
           android:text="@string/Import_File"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:padding="12dp"
           android:textSize="15sp"
           android:layout_marginTop="8dp"
           android:layout_marginStart="18dp"
           app:drawableStartCompat="@drawable/icon_import_export"
           android:drawablePadding="8dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?android:attr/selectableItemBackground"
           />
       <TextView
           android:id="@+id/Delete_All_Record"
           android:text="@string/Delete_All_Record"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textStyle="bold"
           android:padding="12dp"
           android:textSize="15sp"
           android:layout_marginTop="8dp"
           android:layout_marginStart="18dp"
           app:drawableStartCompat="@drawable/icon_delete_record"
           android:drawablePadding="8dp"
           android:clickable="true"
           android:focusable="true"
           android:foreground="?android:attr/selectableItemBackground"
           />

   </androidx.appcompat.widget.LinearLayoutCompat>
</RelativeLayout>