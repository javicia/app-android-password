<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Record.Bank_Record">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            // Texto
            <TextView
                android:text="@string/Txt_B_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"/>
            //Datos
            <TextView
                android:id="@+id/B_Title"
                android:text="@string/B_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="15sp"/>

            //Linea para mejorar diseño
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        //Banco

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            tools:ignore="ExtraText">

            // Texto
            <TextView
                android:text="@string/Txt_B_Bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"/>
            //Datos
            <TextView
                android:id="@+id/B_Bank"
                android:text="@string/B_Bank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="15sp"/>

            //Linea para mejorar diseño
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        //Titular
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            // Texto
            <TextView
                android:text="@string/Txt_B_Account_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                //Datos
                <TextView
                    android:id="@+id/B_Account_Name"
                    android:text="@string/B_Account_Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:textSize="15sp"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/Img_copy_account_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:src="@drawable/icon_copy"
                    android:clickable="true"
                    android:onClick="copyTextAccountName"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            //Linea para mejorar diseño
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"/>


        </androidx.appcompat.widget.LinearLayoutCompat>
        //Contraseña
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                // Texto
                <TextView
                    android:text="@string/Txt_B_Number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:passwordToggleEnabled="true">

                    //Datos
                    <EditText
                        android:id="@+id/B_Number"
                        android:hint="ES"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/Img_copy_number_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@null"
                    android:src="@drawable/icon_copy"
                    android:clickable="true"
                    android:onClick="copyTextNumber"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>
            </RelativeLayout>
            //Linea para mejorar diseño
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>

        //Sitio Web
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            // Texto
            <TextView
                android:text="@string/Txt_B_Websites"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                //Datos
                <TextView
                    android:id="@+id/B_Websites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="italic"
                    android:hint="www."
                    android:textSize="15sp"
                    android:layout_toStartOf="@id/Img_bank"/>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/Img_bank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="5dp"
                    android:background="@null"
                    android:src="@drawable/icon_visit_web"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </RelativeLayout>



            //Linea para mejorar diseño
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        //Nota
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            //Texto
            <TextView
                android:text="@string/Txt_B_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="20sp"/>

            //Datos
            <TextView
                android:id="@+id/B_Note"
                android:text="@string/B_Note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="18sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#000"/>


        </androidx.appcompat.widget.LinearLayoutCompat>

        //Tiempo de registro
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp">

            // Texto
            <TextView
                android:id="@+id/B_RecordTime"
                android:text="@string/Txt_B_RecordTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"/>
            //Datos
            <TextView
                android:text="@string/B_RecordTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textSize="15sp"/>

            //Linea para mejorar diseño
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/black"/>

        </androidx.appcompat.widget.LinearLayoutCompat>
        //tiempo de actualización

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"/>

        // Texto
        <TextView
            android:text="@string/Txt_B_UpdateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"/>
        //Datos
        <TextView
            android:id="@+id/B_UpdateTime"
            android:text="@string/B_UpdateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="15sp"/>

        //Linea para mejorar diseño
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/B_image"
            android:src="@drawable/logo_image"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="200dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>